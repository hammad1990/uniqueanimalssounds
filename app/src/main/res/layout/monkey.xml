<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.uniqueanimalssounds.`3monkey`">

    <Button
        android:id="@+id/btnmonkey"
        android:layout_width="231dp"
        android:layout_height="286dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/monkey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnbird"
        android:layout_width="141dp"
        android:layout_height="139dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="124dp"
        android:background="@drawable/bird"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnmonkey" />

    <Button
        android:id="@+id/btndonkey"
        android:layout_width="116dp"
        android:layout_height="125dp"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/donkey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnmonkey" />
</androidx.constraintlayout.widget.ConstraintLayout>